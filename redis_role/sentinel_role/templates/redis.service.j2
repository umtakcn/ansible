[Unit]
Description=Redis In-Memory Data Store
After=network.target
{% if stunnel == 'y' %}
Requires=stunnel.service
{% else %}
#Requires=stunnel.service
{% endif %}

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/redis-server /etc/redis/redis_{{ port_redis }}.conf --supervised systemd
ExecStop=/usr/local/bin/redis-cli -p {{ port_redis }} U9jN0D9J1a < /etc/redis/redis-shutdown.conf
RuntimeDirectory=redis
RuntimeDirectoryMode=0755
Restart=always
Type=notify
LimitNOFILE=300000

[Install]
WantedBy=multi-user.target
